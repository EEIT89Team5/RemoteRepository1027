<script>
$(document).ready(function() {
	$('.popup-with-zoom-anim').magnificPopup({
		type: 'inline',
		fixedContentPos: false,
		fixedBgPos: true,
		overflowY: 'auto',
		closeBtnInside: true,
		preloader: false,
		midClick: true,
		removalDelay: 300,
		mainClass: 'my-mfp-zoom-in'
	});
	
	$('select[name="selectmm"],select[name="selectyy"]').change(function(){
		var mm = $('select[name="selectmm"]').val();
		var yy = $('select[name="selectyy"]').val();
		if(mm!=0 && yy!=0){
			var monthss = 0;
			var columedata={};
			if(mm=="1"||mm=="3"||mm=="5"||mm=="7"||mm=="8"||mm=="10"||mm=="12") monthss=31;
			else if(mm=="4"||mm=="6"||mm=="9"||mm=="11") monthss=30;
			else{
				if((yy%4==0 && yy%100!=0)||(yy%400==0))monthss=29;
				else monthss=28;
			}
			for(var i=1;i<=monthss;i++){
				columedata[i-1]=i;
// 				console.log(columedata[i-1]);
			}
			$.getJSON("chart.do",{"selyear":yy,"selmonth":mm,"seldate":monthss,"action":"selectmoney"},function(datas){		
// 				console.log(datas);					
				Highcharts.chart('container', {
			        title: {
			            text: yy+'年'+mm+'月每日營業額',
			            x: -20 //center
			        },
			        xAxis: {
			            categories: columedata
			        },
			        yAxis: {
			            title: {
			                text: '新台幣NT$'
			            },
			            plotLines: [{
			                value: 0,
			                width: 1,
			                color: '#808080'
			            }]
			        },
			        tooltip: {
			        	useHTML: true,
			            headerFormat: '<small>'+yy+'年'+mm+'月{point.key}日</small><br/>',
			            valueSuffix: ' 元',
			            style: {                      // 文字内容相关样式
			                color: "#ff0000",
			                fontSize: "30px",
			                fontWeight: "blod",
			                fontFamily: "ShowWind"
			            }
			            
			        },
			        legend: {
			            layout: 'vertical',
			            align: 'right',
			            verticalAlign: 'middle',
			            borderWidth: 0
			        },
			        credits: {
			            enabled: false
			        },
			        series: [{
// 			            name: yy+"/"+mm,
						name: '營業額',
			            data: datas
			        }]
			    });
				
			})  
		}
	})

// 	$('g text').click(function(){
// 		alert($(this).text());
// 	})
	
// 	$(document).on('click','g text',function(){
